@model Library_Mvc_Jashim.Models.Student

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script>
    $(document).ready(function () {
        $('#DelButton').click(function () {
            alert("Confirm Delete..");
            $("#dialog").dialog();
        });
    });
    </script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>

    <div class="display-label" style="display:none;">
        @Html.DisplayNameFor(model => model.GroupID)
    </div>
    <div class="display-field" style="display:none;">
        @Html.DisplayFor(model => model.GroupID)
    </div>

    <div class="display-label" style="display:none;">
        @Html.DisplayNameFor(model => model.MemberID)
    </div>
    <div class="display-field" style="display:none;">
        @Html.DisplayFor(model => model.MemberID)
    </div>
    <div class="display-label ">
        <label style="font-family:'Bookman Old Style';">Student Name</label>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StudentName)
    </div>
    <div class="display-label">
        <label style="font-family:'Bookman Old Style';">Gender</label>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Gender)
    </div>
    <div class="display-label">
        <label style="font-family:'Bookman Old Style';">Email</label>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>
    @using (Html.BeginForm("MyDeletePartial", "Student"))
    {
        <p>
            <br />
            @Html.HiddenFor(model => model.StudentID)
            <input type="submit" value="Delete" id="DelButton" class="btn btn-danger" />
        </p>
    }
</body>
</html>
